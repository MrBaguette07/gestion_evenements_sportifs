{% extends 'base.html.twig' %}

{% block title %}Ajouter un participant{% endblock %}

{% block body %}
<h1>Ajouter un participant à l'événement "{{ event.name }}"</h1>

<!-- Formulaire pour ajouter un participant -->
<form method="POST" action="{{ path('add_participant', {id: event.id}) }}">
    <div class="mb-3">
        <label for="participant_name" class="form-label">Nom du participant</label>
        <input type="text" class="form-control" id="participant_name" name="name" required>
    </div>
    <div class="mb-3">
        <label for="participant_email" class="form-label">Email du participant</label>
        <input type="email" class="form-control" id="participant_email" name="email" required>
    </div>
    <button type="submit" class="btn btn-primary">Ajouter le participant</button>
</form>

<a href="{{ path('view_event', {id: event.id}) }}" class="btn btn-secondary mt-3">Retour à l'événement</a>

{% endblock %}
