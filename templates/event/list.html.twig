{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
<h1>Liste des événements</h1>

<a href="{{ path('add_event') }}" class="btn btn-primary">Créer un événement</a>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Date</th>
            <th>Lieu</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.date|date('d-m-Y H:i') }}</td>
                <td>{{ event.location }}</td>
                <td>
                    <a href="{{ path('view_event', {id: event.id}) }}">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun événement disponible.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
