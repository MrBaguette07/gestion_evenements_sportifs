{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
<h1 class="text-center mb-4">Liste des événements</h1>

<div class="container">
    <a href="{{ path('add_event') }}" class="btn btn-primary mb-3">Créer un événement</a>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Date</th>
                    <th>Lieu</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Distance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.name }}</td>
                        <td>{{ event.date|date('d-m-Y H:i') }}</td>
                        <td>{{ event.location }}</td>
                        <td>{{ event.latitude }}</td>
                        <td>{{ event.longitude }}</td>
                        <td>
                            <input type="number" id="user_lat_{{ event.id }}" placeholder="Latitude" step="any" class="form-control mb-2">
                            <input type="number" id="user_lon_{{ event.id }}" placeholder="Longitude" step="any" class="form-control mb-2">
                            <button onclick="calculateDistance({{ event.id }})" class="btn btn-info w-100">Calculer</button>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('view_event', {id: event.id}) }}" class="btn btn-outline-secondary btn-sm">Voir</a>
                                <a href="{{ path('edit_event', {id: event.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                <a href="{{ path('delete_event', {id: event.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">Supprimer</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun événement disponible.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
    function calculateDistance(eventId) {
        var userLat = parseFloat(document.getElementById('user_lat_' + eventId).value);
        var userLon = parseFloat(document.getElementById('user_lon_' + eventId).value);

        // Vérifiez si l'utilisateur a saisi les coordonnées
        if (!isNaN(userLat) && !isNaN(userLon)) {
            // Faites une requête à la route event_distance pour calculer la distance
            fetch(`/events/${eventId}/distance?lat=${userLat}&lon=${userLon}`)
                .then(response => response.json())
                .then(data => {
                    // Affiche la distance dans le tableau
                    document.getElementById('distance_' + eventId).textContent = data.distance + ' km';
                })
                .catch(error => {
                    console.error('Erreur:', error);
                });
        } else {
            alert('Veuillez entrer des coordonnées valides.');
        }
    }
</script>

{% endblock %}
