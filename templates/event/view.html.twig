{% extends 'base.html.twig' %}

{% block title %}Détails de l'événement{% endblock %}

{% block body %}
<h1>Détails de l'événement</h1>

<p><strong>ID :</strong> {{ event.id }}</p>
<p><strong>Nom :</strong> {{ event.name }}</p>
<p><strong>Date :</strong> {{ event.date|date('d-m-Y H:i') }}</p>
<p><strong>Lieu :</strong> {{ event.location }}</p>

<h2>Participants</h2>

<!-- Lien pour ajouter un participant -->
<a href="{{ path('add_participant', {id: event.id}) }}" class="btn btn-primary mb-3">Ajouter un participant</a>

<table class="table mt-4">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        {% for participant in event.participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.name }}</td>
                <td>{{ participant.email }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun participant inscrit.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<!-- Carte -->
<div id="map" style="height: 400px; width: 100%;"></div>

<script>
    var map = L.map('map').setView([{{ event.latitude }}, {{ event.longitude }}], 13);

    // Ajouter une couche de carte OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Ajouter un marqueur sur la carte à la position de l'événement
    L.marker([{{ event.latitude }}, {{ event.longitude }}]).addTo(map)
        .bindPopup("<b>{{ event.name }}</b><br>{{ event.location }}")
        .openPopup();
</script>

<a href="{{ path('list_events') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}
